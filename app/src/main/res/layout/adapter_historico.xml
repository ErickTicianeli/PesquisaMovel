        android:id="@+id/textTitulo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TÃ­tulo"
        android:textAlignment="textStart"
        android:textSize="12sp" />
</LinearLayout>